@model Order

<h1>Bestellung aufgeben</h1>

<div class="card">
    <div class="card-header">
        <h4>Jetzt bestellen</h4>
    </div>

    <form asp-action="CreateOrderFood" method="post">
        <div class="card-body">
            <div class="row">
                <div class="col form-group">
                    <input asp-for="Count" type="number" placeholder="Anzahl" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col form-group">
                    <select asp-for="Meal" class="form-control">
                        <option value="" disabled selected>Gericht</option>
                        <option value="Cheeseburger">Cheeseburger</option>
                        <option value="Veggie Burger">Veggie Burger</option>
                        <option value="Tante Emma Burger">Tante Emma Burger</option>
                        <option value="Special Burger">Special Burger</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-outline-danger">Bestellen</button>
        </div>
    </form>
</div>
